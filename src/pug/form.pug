-
	var domain = './'
	var imgSrc = './img/'
	var description = 'form'
	var keywords = 'form'
	var title = 'form'
	var date = +new Date()

doctype html
html(lang='ja')
	head
		include include/_meta
		include include/_ogp
		include include/_title
		include include/_css
	body
		form.p-form(method="post")
			dl.p-form__box
				dt.p-form__ttl
					p.p-form__ttl__body
						span.p-form__ttl__body__text タイトル
						span.p-form__ttl__body__required 必須
				dd.p-form__data
					input.p-form__input(type="text" name="title" placeholder="タイトルを入力してください")
			dl.p-form__box
				dt.p-form__ttl
					p.p-form__ttl__body.u-textarea
						span.p-form__ttl__body__text 本文
						span.p-form__ttl__body__required 必須
				dd.p-form__data
					textarea.p-form__textarea(name="body" placeholder="本文を入力してください")
			.p-form__submit__wrap
				button.p-form__submit(type="submit") 送信する
		
		include include/_js
